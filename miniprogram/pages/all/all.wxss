.bottom-bar button{
  height:100rpx;
  width:100%;
  /* margin:20rpx 20rpx 20rpx 0; */
  border-radius: 25rpx;
  color:white ;
  line-height:100rpx;
  text-align:center;
  font-size:32rpx;
  background-color:#cc3300;
}