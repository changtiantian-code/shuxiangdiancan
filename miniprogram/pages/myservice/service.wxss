.container{
  background-color: #cacaca;
}
.scroll-nav{
  background-color:#ccc;
  width:100%;
  height:66rpx;
  display:flex;
  white-space:normal;
  font-size:32rpx;
  line-height: 66rpx;
}
.scroll-nav navigator{
   font-weight:bold;
   margin: 0 50rpx  0 250rpx;
}
.swiper-view2{
  width:100%;
  height:100%;
}
.color-red{
  color:#cc3300;
}
.color-black{
  color:black;
}
.user{
  width:100%;
  height:88rpx;
  /* background-color: aqua; */
  display: flex;
  border-bottom: 2rpx solid #ccc;
}
.user .avatar{
  width:100rpx;
  height:88rpx;
  background-color: pink;
  border-radius: 60rpx;
}
